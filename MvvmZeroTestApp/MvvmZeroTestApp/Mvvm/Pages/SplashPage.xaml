<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmZeroTestApp.Mvvm.Pages.SplashPage"   
             x:Name ="Self"
             BindingContext="{Binding Source={x:Reference Self}, Path=SplashPageVm}"
             NavigationPage.HasNavigationBar="False"
             
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hello from SplashPage"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Button Text="DummyAsync" Command="{Binding DummyCommandAsync}"/>
            <Button Text="Next" Command="{Binding NextCommandAsync}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>