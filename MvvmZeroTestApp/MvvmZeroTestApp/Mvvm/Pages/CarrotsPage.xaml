<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmZeroTestApp.Mvvm.Pages.CarrotsPage"   
             xmlns:pagetransitions="clr-namespace:FunctionZero.MvvmZero.PageTransitions;assembly=FunctionZero.MvvmZero"

             pagetransitions:CustomNavigationPage.TransitionAnimation="{DynamicResource pageTransition}"
             
             x:Name ="Self"
>
    <ContentPage.Resources>
        <ResourceDictionary>
            <pagetransitions:GeneralTransitionAnimation x:Key="pageTransition"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand">
            <Label Text="We value your privacy, that's why we're taking it" FontAttributes="Bold"/>
            <Label Text="Please check below if you don't want to not opt out of spam"/>
            <CheckBox IsChecked="{Binding CanProceed, Mode=TwoWay}"/>
            <Button Text="{Binding NextCommand.FriendlyName}" Command="{Binding NextCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    